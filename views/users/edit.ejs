<%- include('../layouts/header.ejs') %>

<section class="user-edit-section">
    <div class="user-image">
        <img src="userImage/<%= user.image %>" alt="<%= user.image %>">
    </div>

   <div class="edit-container">
    <form action="" method="post" enctype="multipart/form-data" class="user-edit-form">
        <div class="">
            <label for="image">Profile Picture:</label>
            <input style="border: none;" type="file" name="image" id="image">
        </div>
    
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" value="<%= user.name %>" placeholder="Enter name" required>
        </div>
    
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" value="<%= user.email %>" placeholder="Enter Email" required>
        </div>
    
        <div class="form-group">
            <label for="mno">Mobile:</label>
            <input type="text" name="mno" id="mno" value="<%= user.mobile %>" placeholder="Enter mobile" required>
        </div>
    
        <div class="form-group">
            <input type="hidden" name="user_id" value="<%= user._id %>">
            <input type="submit" value="Update Profile">
        </div>
    </form>
   </div>
    
</section>

<%- include('../layouts/footer.ejs') %>
